<Window x:Class="SchoolRegister.Desktop.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolRegister.Desktop"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="StudentWindow" Height="371.429" Width="638.571"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,2,9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Content="Students" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" VerticalAlignment="Top"/>

        <Label Grid.Column="1" Content="Grades" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" VerticalAlignment="Top"/>
        <Button x:Name="AddGrade" Content="Add Grade" Grid.Column="1" Height="40" VerticalAlignment="Bottom" Margin="0,0,110,0" />
        <Button x:Name="SaveChanges" Content="Save Changes" Grid.Column="1" Height="40" VerticalAlignment="Bottom" Margin="118,0,0,0" RenderTransformOrigin="0.205,0.368"/>
    </Grid>
</Window>
