<Window x:Class="SchoolRegister.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
    <Grid Background="#FFE0E0E0" Height="171" Width="400">
        <Label Height="24" Width="70" Content="Username:" HorizontalAlignment="Center" Margin="36,59,286,86"></Label>
        <Label Height="24" Width="70" Content="Password:" HorizontalAlignment="Center" Margin="36,88,286,57"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Center" Height="24" TextWrapping="Wrap" VerticalAlignment="Center" Width="225" Margin="110,60,65,87"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Center" Height="24" VerticalAlignment="Center" Width="225" Margin="110,89,65,58"/>
        <Button Name="Enter" Content="Sign in"  Height="20" Width="80" Margin="255,118,65,33" Click="SignInClick"  />
        <Label x:Name="forgottenPasswordLabel" Content="Forgotten password" HorizontalAlignment="Left" Margin="109,112,0,0" VerticalAlignment="Top" MouseUp="forgottenPasswordLabel_MouseUp"/>
   </Grid>
</Window>
