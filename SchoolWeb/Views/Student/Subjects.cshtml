@model SchoolWeb.Models.StudentModel

@{
    ViewBag.Title = "Subjects";
}

<div class="subj">
    <div class="row">
        <div class="col-md-3">
<h2 style="background-color: #e9e9e9; padding:15px; border-radius:  35px; text-align:center">Subjects</h2>
            </div>
        <div class="col-md-5"></div>
        <div class="col-md-4"></div>
        </div>
    </div>

<section class="container outer-container">
    <br><br>
    <div class="container-fluid well span6 centeredDiv">
        <div class="row-fluid">
            <div class="span2">
                <img src="~/Content/Images/12079283_10206815344654126_7615626508305354184_n.jpg" style="width:150px; height:150px;" class="img-circle">
            </div>

            <div class="span8">
                <h3>@Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)</h3>
                <h6>Email: @Html.DisplayFor(m => m.Email)</h6>
                <h6>Address: @Html.DisplayFor(m => m.Address)</h6>
                <h6>School: @Html.DisplayFor(m => m.SchoolName)</h6>
            </div>

            <div class="span2">
                <table class="table table-hover">
                    <thead class="the">
                        <tr>
                            <td>Description</td>
                            <td>Teacher</td>
                            <td>Marks</td>
                        </tr>
                    </thead>

                    @foreach (var subject in Model.Datas)
                    {
                        <tr>
                            <td>@subject.SubjectName</td>
                            <td>NA</td>
                            <td>@subject.MarksToString()</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</section>

